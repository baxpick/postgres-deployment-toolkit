services:
  postgres:
    image: ${MY_POSTGRES_IMAGE_NAME}
    build:
      context: .
      dockerfile: docker/Dockerfile
    container_name: ${MY_POSTGRES_CONTAINER_NAME}
    environment:
      POSTGRES_USER: ${MY_POSTGRES_USER}
      POSTGRES_PASSWORD: ${MY_POSTGRES_PASSWORD}
      POSTGRES_DB: ${MY_POSTGRES_DATABASE}
      POSTGRES_HOST_AUTH_METHOD: scram-sha-256
      POSTGRES_INITDB_ARGS: "--encoding=UTF8 --locale=en_US.UTF8 --auth-host=scram-sha-256"
    ports:
      - "${MY_POSTGRES_HOST_PORT}:${MY_POSTGRES_CONTAINER_PORT}"
    volumes:
      - {{ postgres_volume_name }}:/var/lib/postgresql
      - ./certs/combined_cert.pem:/var/lib/postgresql/certs/server.crt:ro
      - ./certs/privkey.pem:/var/lib/postgresql/certs/server.key:ro
    deploy:
      resources:
        limits:
          cpus: '${MY_POSTGRES_CPUS}'
          memory: ${MY_POSTGRES_MEMORY}
        reservations:
          cpus: '${MY_POSTGRES_CPUS_RESERVED}'
          memory: ${MY_POSTGRES_MEMORY_RESERVED}
    shm_size: ${MY_POSTGRES_SHM_SIZE}
    command:
      - "postgres"
      - "-c"
      - "config_file=/etc/postgresql/postgresql.conf"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U $$POSTGRES_USER -d $$POSTGRES_DB -p ${MY_POSTGRES_CONTAINER_PORT}"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
    restart: unless-stopped
    networks:
      - {{ postgres_network_name }}

volumes:
  {{ postgres_volume_name }}:
    driver: local

networks:
  {{ postgres_network_name }}:
    driver: bridge
